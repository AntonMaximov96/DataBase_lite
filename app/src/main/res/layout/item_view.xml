<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/textView_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_guest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#546E7A"
            tools:hint=" Name" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/textView_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView_up">

        <TextView
            android:id="@+id/people_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#546E7A"
            tools:hint="Number" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text database"
        android:layout_below="@+id/textView_bottom"/>

</RelativeLayout>